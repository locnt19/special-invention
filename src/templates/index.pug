extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

//- Phần khai báo body
block body
	//- Bạn viết code vào đây nhớ là phải mở đầu bằng section ở mỗi khối
	section.home-banner
		.owl-carousel.owl-theme
			.item
				img(src="img/trangchu/trangchu_banner_img_01.png", alt="", srcset="")
				.title Trải nghiệm vượt trội cùng Tutto
			.item
				img(src="img/trangchu/trangchu_banner_img_02.png", alt="", srcset="")
			.item
				img(src="img/trangchu/trangchu_banner_img_03.png", alt="", srcset="")
				.title Tự tin làm chủ tay lái trên mọi chặn đường
			.item
				img(src="img/trangchu/trangchu_banner_img_04.png", alt="", srcset="")
				.title Trải nghiệm vượt trội cùng Tutto
	section.home-services
		.container
			.row
				.col
					h2 sản phẩm nổi bật
						span
			.row
				.col-sm-4.item
					figure
						img(src="img/services_img_01.png", alt="", srcset="")
				.col-sm-4.item
					figure
						img(src="img/services_img_02.png", alt="", srcset="")
				.col-sm-4.item
					figure
						img(src="img/services_img_03.png", alt="", srcset="")
	section.home-about
		.container
			.row
				.col.banhxe
				.col
					.row.pt-5
						.col
							figure
								img(src="img/trangchu/trangchu_news_img_01.png", alt="")
								figcaption
									h2 giới thiệu
										span
									.title Tutto Việt Nam tự hào là nhà phân phối vỏ - ruột xe cao cấp cho hàng ngàn chiếc xe trong thập kỷ qua. Với hơn 10 năm hoạt động phân phối vỏ ruột xe, Tutto hiểu rõ những gì tốt nhất cho chiếc xe của bạn. Từ những mong muốn của bạn, đội ngũ Tutto cam kết một dịch vụ trọn gói tốt nhất từ A đến Z.
									.icon
										i.fa.fa-arrow-right
					.row
						.col
							figure
								img(src="img/trangchu/trangchu_news_img_02.png", alt="")
								figcaption
									h2 tìm lốp xe phù hợp
										span
									.form-group
										select.form-control
											option Chọn loại
											option 1
											option 2
											option 3
											option 4
											option 5
										select.form-control
											option Chọn mẫu xe
											option 1
											option 2
											option 3
											option 4
											option 5
										select.form-control
											option Chọn kích thước
											option 1
											option 2
											option 3
											option 4
											option 5
										button Tìm kiếm
									.icon
										i.fa.fa-arrow-right
	section.home-promotion.container
		img(src="img/trangchu/trangchu_about_bg.png", alt="", srcset="")
		.box
			h2 chương trình khuyến mãi
				span
			.title Cùng với nhiều chiết khấu và ưu dãi hấp dẫn, Tutto luôn sẵn sàng đồng hành cùng bạn trên mọi chặng đường.
			button Xem thêm
	section.home-news
		.container
			.row
				.col
					h2 tin tức
						span
			.row
				.col-12.col-md-6
					figure
						img(src="img/trangchu/trangchu_news_img_03.png", alt="")
						figcaption
							h5 Những tính năng của hoa lốp xe ô tô
				.col-12.col-md-6
					.row.no-gutters
						.col-12.col-md-6.order-1.order-md-1
							img(src="img/trangchu/trangchu_news_img_04.png", alt="")
						.col-12.col-md-6.order-2.order-md-2.title
							h5 Dấu hiệu nhận biết cần thay lốp xe máy ngay lập tức
							p "Trong quá trình sử dụng, khi nhận thấy một số biểu hiện bất thường dưới đây, bạn cần phải thay lốp xe ngay"
							a(href="#") Xem thêm
						.col-12.col-md-6.order-4.order-md-3.title
							h5 Turanza T005 - Lốp xe đặc biệt, êm và an toàn
							p "Bridgestone Việt Nam, tập đoàn Bridgestone, tập đoàn sản xuất lốp cao su lớn nhất thế giới"
							a(href="#") Xem thêm
						.col-12.col-md-6.order-3.order-md-4
							img(src="img/trangchu/trangchu_news_img_05.png", alt="")
